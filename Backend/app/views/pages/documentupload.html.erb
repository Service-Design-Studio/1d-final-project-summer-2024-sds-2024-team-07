<script>
function showTabGroup(groupNumber) {
    // Reset all tabs to default state
    resetTabs();

    var buttons = document.querySelectorAll('.btn-group .btn');
    buttons.forEach(function(button) {
    button.classList.remove('active');
    });
    var clickedButton = document.getElementById('button' + groupNumber);
    clickedButton.classList.add('active');


    // Apply lighten color and disable tabs based on the selected button
    if (groupNumber === 2) {
        disableTabs(['tab3']); // Disable Pay Slip tab
    }
    if (groupNumber === 3) {
        disableTabs(['tab4']); // Disable Pay Slip tab
    }
    // Add similar conditions for other buttons if needed
}

function resetTabs() {
    const tabLabels = document.querySelectorAll('.tabs ul li label');
    const radioButtons = document.querySelectorAll('.tabs input[name="tab-control"]');
    
    tabLabels.forEach(label => {
        label.style.color = '';
        label.style.cursor = 'pointer';
        label.querySelector('svg').style.fill = '';
        label.classList.remove('disabled-tab');
    });

    radioButtons.forEach(radio => {
        radio.disabled = false;
    });
}

function disableTabs(tabsToDisable) {
    tabsToDisable.forEach(tabId => {
        const label = document.querySelector(`label[for="${tabId}"]`);
        const radio = document.getElementById(tabId);

        label.style.color = lightenColor(getComputedStyle(label).color, 50);
        label.style.cursor = 'default';
        label.querySelector('svg').style.fill = lightenColor(getComputedStyle(label.querySelector('svg')).fill, 15);
        label.classList.add('disabled-tab');

        radio.disabled = true;
    });
}

function lightenColor(color, percent) {
    // Convert hex color to RGB
    let r = parseInt(color.substring(1, 3), 16);
    let g = parseInt(color.substring(3, 5), 16);
    let b = parseInt(color.substring(5, 7), 16);

    // Increase each channel by the given percentage
    r = Math.min(255, Math.floor(r * (1 + percent / 100)));
    g = Math.min(255, Math.floor(g * (1 + percent / 100)));
    b = Math.min(255, Math.floor(b * (1 + percent / 100)));

    // Convert RGB back to hex
    r = r.toString(16).padStart(2, '0');
    g = g.toString(16).padStart(2, '0');
    b = b.toString(16).padStart(2, '0');

    return `#${r}${g}${b}`;
}

document.getElementById('button1').addEventListener('click', () => showTabGroup(1));
document.getElementById('button2').addEventListener('click', () => showTabGroup(2));
document.getElementById('button3').addEventListener('click', () => showTabGroup(3));

</script>