<div class="custom-container">
  <div class="left-div">
    <%= render 'shared/left_toggle-sidebar' %>
  </div>
  <div class="right-div">
    <%= render 'shared/right_header' %>
    <div class="content">
      <div id="tab5">
        <h2>Name</h2>
        <input type="text" placeholder="Enter your name" />
      </div>
      <div id="tab6">
        <h2>Date of Birth</h2>
        <input type="date" />
      </div>
      <div id="tab7">
        <h2>Gender</h2>
        <select>
          <option value="male">Male</option>
          <option value="female">Female</option>
          <option value="other">Other</option>
        </select>
      </div>
      <div>
        <h1>Contact Information</h1>
        <div id="tab8">
          <h3>Mobile Number</h3>
          <input type="text" placeholder="Enter your mobile number" />
        </div>
        <div id="tab9">
          <h3>Email Address</h3>
          <input type="text" placeholder="Enter your email address" />
        </div>
        <div id="tab10">
          <h3>Home Number</h3>
          <input type="text" placeholder="Enter your home number" />
        </div>
        <div id="tab11">
          <h3>Office Number</h3>
          <input type="text" placeholder="Enter your office number" />
        </div>
      </div>
      <div>
        <h1>Passport Details</h1>
        <div id="tab12">
          <h3>Nationality</h3>
          <input type="text" placeholder="Enter your nationality" />
        </div>
        <div id="tab13">
          <h3>Passport Number</h3>
          <input type="text" placeholder="Enter your passport number" />
        </div>
        <div id="tab14">
          <h3>Passport Expiry Date</h3>
          <input type="date" />
        </div>
      </div>
      <button type="submit">Save</button>
    </div>
  </div>
</div>
