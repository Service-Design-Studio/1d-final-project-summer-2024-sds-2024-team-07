<h1>Upload a File</h1>
<%= form_with url: uploads_path, local: true, multipart: true do |form| %>
  <div class="field">
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>
  <div class="actions">
    <%= form.submit 'Upload' %>
  </div>
<% end %>

<% if params[:result] %>
  <div style="margin-top: 20px;">
    <h3>Result:</h3>
    <textarea readonly rows="10" cols="50"><%= params[:result] %></textarea>
  </div>
<% end %>
