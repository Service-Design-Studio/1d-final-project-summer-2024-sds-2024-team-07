<%= form_with(url: ocr_index_path, local: true, enctype: "multipart/form-data") do |form| %>
  <div class="form-group">
    <%= form.label :file %>
    <%= form.file_field :file, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :doc_type %>
    <%= form.text_field :doc_type, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Upload Document", class: 'btn btn-primary' %>
  </div>
<% end %>
