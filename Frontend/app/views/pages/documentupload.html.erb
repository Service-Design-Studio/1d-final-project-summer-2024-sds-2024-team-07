                    <%= image_tag 'TaxAsessment1.png', alt: "Income Tax", class: 'content-image' %>
                </section>
                <section id="content4">
                    <%= image_tag 'IncomeSlip.png', alt: "Pay Slip", class: 'content-image' %>
                </section>
                <section id="content5">
                    <%= image_tag 'poa.png', alt: "Proof of Address", class: 'content-image' %>
